@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Email Confirmation</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
</head>

<body>
   
    <div class="d-flex justify-content-center main-bg-color">
        <div class="w-50 vh-100 p-5">
            <div class="card-header main-bg-color">
                <p class="fs-3 text-center m-0 fw-bold text-dark">Email Confirmation</p>
            </div>
            <div class="pt-5">
                <div class="card mt-2">
                    <div class="card-body item-main-bg-color">
                        <p class="text-center">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
