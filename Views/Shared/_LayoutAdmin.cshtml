<!DOCTYPE html>
<html lang="en">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Selene Printing Studio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="icon" runat="server" href=@Url.Content("~/favicon.ico") type="image/ico" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'/>
</head>
<body>
    <br />
    <br />
    <br />
    <nav class="shadow main-nav fixed-top">
        <div class="logo">
                <a class="fw-bold" aria-current="page" asp-area="" asp-controller="Admin" asp-action="Index"><img class="logo" src="/images/logo.png" /></a>
            </div>
        <ul id="menuList">
            <li><a class="fw-bold" aria-current="page" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fa-solid fa-house"></i>&nbsp; Dashboard</a></li>
            <li><a class="fw-bold" aria-current="page" asp-area="" asp-controller="User" asp-action="Home"><i class="fa-solid fa-eye"></i>&nbsp; Customer View</a></li>
            <li><a class="fw-bold" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa-regular fa-circle-user"></i></i>&nbsp; Logout</a></li>
        </ul>
        <div class="menu-icon">
            <i class="fa-solid fa-bars" onclick="toggleMenu()"></i>
        </div>
    </nav>





    @*script for mobile dropdown of navbar*@
    <script>
        let menuList = document.getElementById("menuList")
        menuList.style.maxHeight = "0px";

        function toggleMenu() {
            if (menuList.style.maxHeight == "0px") {
                menuList.style.maxHeight = "600px";
            }
            else {
                menuList.style.maxHeight = "0px";
            }
        }
    </script>


    <div class="container-body mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
