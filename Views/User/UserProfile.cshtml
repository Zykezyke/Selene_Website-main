@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SELENE_STUDIO.Data.RegUser

<br />
<br />

<div class="container">
    <h1 class="text-color fs-1 fw-bold mr-3 pt-2 pb-2">User Profile</h1>
</div>

<div class="container">
    <div>
        <div class="px-5 py-2 mb-5 pb-5">
            <div class="mt-3">
                <div class="border-2 border-dark">
                    <div class="row shadow">
                        <div class="col order-details-bar">
                            <p class="fw-bold">Account Details</p>
                        </div>
                    </div>
                    <div class="row shadow">
                        <div class="order-details">
                            <br />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Full Name:</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted">@Model.FirstName @Model.LastName</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Mobile Number:</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted">@Model.PhoneNumber</p>
                                    </div>
                                </div>
                                <hr
                        <div>
                        <div class="order-details">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Home Address:</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted">@Model.Address</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Email:</p>
                                    </div>
                                    <div class="col-sm-9 pb-3">
                                            <p class="text-muted overflow-auto">@Model.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>

                    <div class="d-flex align-items-center">
                        <a asp-area="" asp-controller="User" asp-action="UpdateUserProfile" class="pr-3 pt-3">
                            <button type="button" class="updateprofile ">Update Profile</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

